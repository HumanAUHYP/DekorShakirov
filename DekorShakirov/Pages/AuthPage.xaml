<Page x:Class="DekorShakirov.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DekorShakirov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Логин:" Width="100" />
                <TextBox x:Name="tbxLogin" MinWidth="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Пароль:" Width="100" />
                <PasswordBox x:Name="pbxPassword" MinWidth="200"/>
            </StackPanel>
            <Button x:Name="btnEnter" Content="Войти" Width="100" Margin="0,0,0,10" Click="btnEnter_Click"/>
            <Button x:Name="btnEnterGuest" Content="Войти как гость" Width="200" Click="btnEnterGuest_Click" Margin="0"/>
        </StackPanel>
    </Grid>
</Page>
