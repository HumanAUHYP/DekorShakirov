<Window x:Class="DekorShakirov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DekorShakirov"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Background="#B3F4E9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Source="Images/logo.png" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <TextBlock x:Name="tbTitle" Grid.Column="1" Text="Начальная страница" VerticalAlignment="Center"/>
            <Button x:Name="btnBack" Grid.Column="2" Content="Назад" Width="100" HorizontalAlignment="Right" Margin="0,10,10,10" Click="btnBack_Click"/>
        </Grid>
        
        <Frame x:Name="mainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
